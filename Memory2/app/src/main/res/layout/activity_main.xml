<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_alignParentLeft="true"
  android:layout_alignParentTop="true"
  android:id="@+id/RLayout"
  tools:context=".MainActivity">

    <Button
      android:id="@+id/b1"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:text="Tessera 1"
      tools:ignore="HardcodedText" />

    <Button
      android:id="@+id/b2"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:text="Tessera 2"
      tools:ignore="HardcodedText" />

    <Button
      android:id="@+id/b3"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignLeft="@+id/b1"
      android:layout_below="@+id/b1"
      android:text="Tessera 3"
      tools:ignore="HardcodedText" />
    <Button
      android:id="@+id/b4"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignRight="@+id/b2"
      android:layout_below="@+id/b2"
      android:text="Tessera 4"
      tools:ignore="HardcodedText" />

    <Button
      android:id="@+id/b5"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignLeft="@+id/b3"
      android:layout_below="@+id/b3"
      android:text="Tessera 5"
      tools:ignore="HardcodedText" />
    <Button
      android:id="@+id/b6"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignRight="@+id/b4"
      android:layout_below="@+id/b4"
      android:text="Tessera 6"
      tools:ignore="HardcodedText" />

    <Button
      android:id="@+id/b7"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignLeft="@+id/b5"
      android:layout_below="@+id/b5"
      android:text="Tessera 7"
      tools:ignore="HardcodedText" />
    <Button
      android:id="@+id/b8"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignRight="@+id/b6"
      android:layout_below="@+id/b6"
      android:text="Tessera 8"
      tools:ignore="HardcodedText" />

    <Button
      android:id="@+id/b9"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignLeft="@+id/b7"
      android:layout_below="@+id/b7"
      android:text="Tessera 9"
      tools:ignore="HardcodedText" />
    <Button
      android:id="@+id/b10"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_alignRight="@+id/b8"
      android:layout_below="@+id/b8"
      android:text="Tessera 10"
      tools:ignore="HardcodedText" />

</RelativeLayout>